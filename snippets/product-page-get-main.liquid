{%- case template_layout -%}
{%- when '1' -%}
    <div class="product-page-main"{% include 'product-get-attributes' %} data-js-product-clone-id="footbar">
        <div class="row">
            <div class="col-12 col-lg-6{% if reverse %} order-lg-1{% endif %}{% if enable_sticky_gallery %} index-10 sticky-sidebar js-sticky-sidebar{% endif %}">
                {%- if enable_sticky_gallery -%}
                    <div data-js-sticky-sidebar-body{% if is_quick_view %} data-js-disable-offsets{% endif %}>
                {%- endif -%}
                         {% comment %}
                        {% include 'product-page-get-gallery' %} 
                      {% endcomment %}
                        {% include 'product-thumbnail-slider' %}
                {%- if enable_sticky_gallery -%}
                    </div>
                {%- endif -%}
            </div>
            <div class="col-12 col-lg-6">
                {% include 'product-page-get-info' %}
            </div>
        </div>
    </div>
{%- when '2' -%}
    <div class="product-page-main"{% include 'product-get-attributes' %} data-js-product-clone-id="footbar">
        <div class="row">
            <div class="col-12 col-lg-8{% if enable_sticky_gallery %} index-10 sticky-sidebar js-sticky-sidebar{% endif %}">
                {%- if enable_sticky_gallery -%}
                    <div data-js-sticky-sidebar-body{% if is_quick_view %} data-js-disable-offsets{% endif %}>
                {%- endif -%}
                         {% comment %}
                        {% include 'product-page-get-gallery' %}
                      {% endcomment %}
                        {% include 'product-thumbnail-slider' %}
                {%- if enable_sticky_gallery -%}
                    </div>
                {%- endif -%}
            </div>
            <div class="col-12 col-lg-4">
                {% include 'product-page-get-info' %}
                {%- if section.settings.show_tabs -%}
                    <div class="product-page__tabs mt-30 mb-40">
                        {% include 'product-page-get-tabs' %}
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
{%- when '3' -%}
    <div class="product-page-main"{% include 'product-get-attributes' %} data-js-product-clone-id="footbar">
        <div class="row">
            <div class="col-12 col-lg-6{% if enable_sticky_gallery %} index-10 sticky-sidebar js-sticky-sidebar{% endif %}">
                {%- if enable_sticky_gallery -%}
                    <div data-js-sticky-sidebar-body{% if is_quick_view %} data-js-disable-offsets{% endif %}>
                {%- endif -%}
                         {% comment %}
                        {% include 'product-page-get-gallery' %}
                      {% endcomment %}
                        {% include 'product-thumbnail-slider' %}
                {%- if enable_sticky_gallery -%}
                    </div>
                {%- endif -%}
            </div>
            <div class="col-12 col-lg-6{% if enable_sticky_gallery %} sticky-sidebar js-sticky-sidebar{% endif %}">
                {%- if enable_sticky_gallery -%}
                    <div data-js-sticky-sidebar-body{% if is_quick_view %} data-js-disable-offsets{% endif %}>
                {%- endif -%}
                        {% include 'product-page-get-info' %}
                        {%- if section.settings.show_tabs -%}
                            <div class="product-page__tabs mt-30 pb-40">
                                {% include 'product-page-get-tabs' %}
                            </div>
                        {%- endif -%}
                {%- if enable_sticky_gallery -%}
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
{%- when '4' -%}
    <div  class="product-page-main"{% include 'product-get-attributes' %} data-js-product-clone-id="footbar">
        <div class="row">
            <div id="product-left-sidebar" class="col-12 col-lg-7{% if enable_sticky_gallery %} index-10 sticky-sidebar js-sticky-sidebar{% endif %} product_gallery_main">
                {%- if enable_sticky_gallery -%}
                    <div data-js-sticky-sidebar-body{% if is_quick_view %} data-js-disable-offsets{% endif %}>
                {%- endif -%}
                      {% comment %}
                        {% include 'product-page-get-gallery' %}
                      {% endcomment %}
                      
                      
                      
                        {% include 'product-thumbnail-slider' %}
                {%- if enable_sticky_gallery -%}
                    </div>
                {%- endif -%}
            </div>
            <div id="product-right-sidebar" class="col-12 col-lg-5{% if enable_sticky_gallery %} sticky-sidebar js-sticky-sidebar{% endif %} px-20">
                {%- if enable_sticky_gallery -%}
                    <div data-js-sticky-sidebar-body{% if is_quick_view %} data-js-disable-offsets{% endif %}>
                {%- endif -%}
                        {% include 'product-page-get-info' %}
                        {%- if section.settings.show_tabs -%}
                            <div class="product-page__tabs mt-5 pb-40" id="product-tabs-page">
                                {% include 'product-page-get-tabs' %}
                            </div>
                        {%- endif -%}
                      
         <span class="desktop-btn no_timer_class only_mobile d-none {% if product.metafields.accentuate.launch_date != blank %} launching_product{% endif %}">
              {% include 'footbar' %}
           {% comment %}
            {% include 'product-page-get-buttons' %}
           {% endcomment %}
		</span>
                      <div class="only_mobile payment_icons">
<!--                         <img src="https://cdn.shopify.com/s/files/1/0557/1949/3785/files/payment_icons-1024x54.png?v=1639132123"/> -->
                      </div>
                {%- if enable_sticky_gallery -%}
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
{%- when '5' -%}
    <div class="product-page-main"{% include 'product-get-attributes' %} data-js-product-clone-id="footbar">
        {% comment %}
                        {% include 'product-page-get-gallery' %}
                      {% endcomment %}
                        {% include 'product-thumbnail-slider' %}
        {% include 'product-page-get-info' %}
    </div>
{%- endcase -%}

{%- if enable_sticky_gallery -%}
    <script>
        Loader.require({type: "script", name: "sticky_sidebar"});
    </script>
{%- endif -%}